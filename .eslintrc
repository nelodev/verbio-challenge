{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "eslint-config-prettier", "plugin:jest/recommended"],
  "rules": {
    "strict": ["error", "never"]
  },
  "env": {
    "browser": true,
    "jest/globals": true,
    "node": true
  },
  "overrides": [
    {
      "files": "**/*.+(ts|tsx|test.tsx)",
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "plugins": ["@typescript-eslint/eslint-plugin"]
    }
  ]
}
